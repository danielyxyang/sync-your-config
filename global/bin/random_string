#!zsh

# set help message
usage=$(cat << EOF
Usage: $(basename $0) [options]
Generate a random string consisting of an adjective, a noun, and an integer.

Implemented based on "mlflow.utils.name_utils.py:_generate_random_name".

Options:
  -h, --help

EOF
)
# set default values

# parse known options
# args=()
while (( $# > 0 )); do
  case "$1" in
    -h|--help) echo "${usage}"; return 0;;
    *)         echo "Unknown option $1"; return 1;;
    # *)         args+=("$1"); shift 1;;
  esac
done
# restore unknown options
# set -- "${args[@]}"

